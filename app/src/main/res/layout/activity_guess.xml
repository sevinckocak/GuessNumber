<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2557"
    tools:context=".Guess">

    <EditText
        android:id="@+id/editGuessNumber"
        android:layout_width="408dp"
        android:layout_height="95dp"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:hint="Enter a guess number (1-100)"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#F6F3F3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remainingGuess" />

    <Button
        android:id="@+id/buttonCheck"
        android:layout_width="197dp"
        android:layout_height="58dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="107dp"
        android:text="Check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editGuessNumber" />

    <TextView
        android:id="@+id/remainingGuess"
        android:layout_width="255dp"
        android:layout_height="42dp"
        android:layout_marginTop="68dp"
        android:text="Remaining guesses : 5"
        android:textAlignment="center"
        android:textColor="#F0ECEC"
        android:textColorLink="#FAF6F6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guessHelp"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="174dp"
        android:textAlignment="center"
        android:textColor="#D18E1F"
        android:textColorLink="#661717"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remainingGuess" />
</androidx.constraintlayout.widget.ConstraintLayout>